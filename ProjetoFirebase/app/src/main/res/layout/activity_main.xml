<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="firebase.elfrarep.cursoandroid.com.projetofirebase.MainActivity">

    <TextView
        android:id="@+id/textoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/emailOneID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="106dp"
        android:layout_alignBaseline="@+id/emailTwoId"
        android:layout_alignBottom="@+id/emailTwoId"
        android:layout_toRightOf="@+id/textoId"
        android:layout_toEndOf="@+id/textoId" />

    <Button
        android:id="@+id/emailTwoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:text="Button"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="106dp"
        android:layout_below="@+id/textoId"
        android:layout_toLeftOf="@+id/textoId"
        android:layout_toStartOf="@+id/textoId" />

</RelativeLayout>
